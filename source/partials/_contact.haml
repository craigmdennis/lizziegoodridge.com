%section#contact
  .container
    .row
      .col-lg-12.text-center
        %h2 Contact Lizzie
        %hr.star-primary/
    .row
      .col-lg-8.col-lg-offset-2
        %form#contactForm{novalidate: "", "accept-charset" => "UTF-8", action: "https://formkeep.com/f/da65a7b70391", method: "POST"}
          %input{type: "hidden", name: "utf8", value: "âœ“"}
          .row.control-group
            .form-group.col-xs-12.floating-label-form-group.controls
              %label Name
              %input#name.form-control{"data-validation-required-message" => "Please enter your name.", :placeholder => "Name", :required => "", :type => "text", name: "name"}/
              %p.help-block.text-danger
          .row.control-group
            .form-group.col-xs-12.floating-label-form-group.controls
              %label Email Address
              %input#email.form-control{"data-validation-required-message" => "Please enter your email address.", :placeholder => "Email Address", :required => "", :type => "email", name: "email"}/
              %p.help-block.text-danger
          .row.control-group
            .form-group.col-xs-12.floating-label-form-group.controls
              %label Phone Number
              %input#phone.form-control{"data-validation-required-message" => "Please enter your phone number.", :placeholder => "Phone Number", :required => "", :type => "tel", name: "phone"}/
              %p.help-block.text-danger
          .row.control-group
            .form-group.col-xs-12.floating-label-form-group.controls
              %label Message
              %textarea#message.form-control{"data-validation-required-message" => "Please enter a message.", :placeholder => "Message", :required => "", :rows => "5", name: "message"}
              %p.help-block.text-danger
          %br/
          #success
          .row
            .form-group.col-xs-12
              %button#btnSubmit.btn.btn-success.btn-lg{:type => "submit", "data-loading-text" => "Sending..." } Send